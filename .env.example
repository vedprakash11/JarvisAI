# Copy to .env and set values. In production, never use default secrets (JWT_SECRET, MYSQL_PASSWORD).

# Groq LLM – comma-separated keys to rotate. Get keys: https://console.groq.com
GROQ_API_KEYS=key1,key2
# Or single key: GROQ_API_KEY=your_key

# Tavily search (realtime mode). Get key: https://tavily.com
TAVILY_API_KEY=

# MySQL – create DB first: CREATE DATABASE jarvisai;
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root

MYSQL_DATABASE=jarvisai

# JWT – required; use a long random string in production (no default in prod)
JWT_SECRET=change-me-in-production
JWT_EXPIRE_MINUTES=10080

# Chat rate limit per IP (e.g. 30/minute, 100/hour). Default: 30/minute
# RATE_LIMIT_CHAT=100/hour

# Request log file; empty or unset = stderr only
# LOG_FILE=logs/jarvisai.log

# OpenWeatherMap – for weather/temperature queries. https://openweathermap.org/api
# OPENWEATHERMAP_API_KEY=
# OPENWEATHERMAP_DEFAULT_CITY=London

# Admin: emails allowed for /admin/* and built-in dashboard (comma-separated)
# ADMIN_EMAILS=admin@example.com

# Default admin account (seeded on first run; used for dashboard login and scheduled brief). Set in .env only.
# DEFAULT_ADMIN_EMAIL=admin@example.com
# DEFAULT_ADMIN_PASSWORD=your-secure-password

# Dashboard (Flask, port 5000) – run_dashboard.py
# JARVIS_API_URL=http://127.0.0.1:8000
# DASHBOARD_PORT=5000
# SESSION_SECRET=optional-flask-session-secret

# Murf TTS (daily brief voice). Get key: https://murf.ai/api
# MURF_API_KEY=
# MURF_REGION=GLOBAL

# Reminders: webhook URL for due reminders (e.g. Discord/Telegram); worker runs in-process
# REMINDER_WEBHOOK_URL=
# REMINDER_CHECK_INTERVAL_SECONDS=60
# INTERNAL_SECRET=optional-secret-for-internal-endpoints

# Daily brief: hour (0-23) to generate brief; default 7
# BRIEF_HOUR=7
